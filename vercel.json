{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",  
      "use": "@vercel/react"
    },
    {
      "src": "server/routes/**/*.js",  
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "/server/routes/$1.js"  
    },
    {
      "src": "/(.*)",  
      "dest": "/client/build/$1"
    }
  ]
}
